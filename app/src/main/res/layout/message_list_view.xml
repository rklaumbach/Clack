<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp" tools:srcCompat="@drawable/profiledefault"
            android:id="@+id/messageUserImage" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/messageUserNameLbl" tools:text="name" app:layout_constraintStart_toEndOf="@+id/messageUserImage"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timeStampLbl" app:layout_constraintStart_toEndOf="@+id/messageUserNameLbl"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/messageBodyLbl"
            tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Praesent consectetur hendrerit ullamcorper. In iaculis, erat sit amet lobortis mattis, eros ex ultricies urna, laoreet tempor dolor odio id massa. Aliquam finibus leo nec hendrerit pulvinar. Vivamus at leo lacus. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Etiam eu blandit augue. Vestibulum iaculis et ante non congue. Mauris ultricies nunc ac convallis suscipit. Integer ac risus eget tortor dapibus condimentum. Suspendisse eget posuere justo. Mauris commodo lacus ut tellus condimentum, vel sodales eros suscipit."
            app:layout_constraintStart_toEndOf="@+id/messageUserImage"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/timeStampLbl"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"/>
</android.support.constraint.ConstraintLayout>